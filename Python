#code=gbk

import random

guess = int(input("猜猜我在想什么数字"))
Answer = random.randint(1,100)

while guess != Answer:
    guess=int(input("没猜中哦，再猜："))                      
    if guess > Answer:
        print("太大啦！")
    if guess < Answer:
        print("太小啦！")
    
else:
    print("猜中啦！")

print("不玩儿啦！")





20171010-5
#code=gbk

import random

print("=========Let's play a game! You have 5 chances to guess!=========")

guess = int(input("Guess what number I have in mind:"))
answer = random.randint(0,100)
counter = 1

while (guess != answer) and (counter < 5):
     if guess < answer:
          print("Too small!")
     if guess > answer:
          print("Too large!")
     guess = int(input("Try again:"))
     counter += 1 
     
if guess == answer:
     print("Bingo! You read my mind!")

else:
     print("Sorry you lost you chances, the answer is " + str(answer)) 

print("Thanks for playing!")
